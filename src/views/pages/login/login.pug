extends ../main
include ../../mixins/btn_group
include ../../mixins/btn

block title
	title Авторизация
block content
	//Секция Авторизация
	main.section.login
		.main-bg.login__main-bg
			img(src=require("src/images/forest.jpg") alt="")
		.main-img-mask.login__main-img-mask
		//Вход
		.login__input
			.input__title.underline АВТОРИЗУЙТЕСЬ
			.input__col
				input(name='input__login' type="text" placeholder='Логин' required autofocus).input__login.input__row
				input(name='input__pasword' type="password" placeholder='Пароль' required).input__pasword.input__row
				.input__human.input__row
				.input__robots.input__row
					.input__robots-title
					.input__robots-radio
						.input__robots-yes Да
						.input__robots-no Не уверен
			-
				var login_btn_group = [
				{
				title: 'На главную',
				class_name: 'btn-to-main',
				url: '#'
				},{
				title: 'Войти',
				class_name: 'btn-login',
				url: '#'
				}
				];
			+btn_group('login_button-group', login_btn_group)
		footer.main-footer.login__main-footer
			.main-footer__copyright.login__copyright © Марина Сокуренко | 2018