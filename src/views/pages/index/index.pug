extends ../main
include ../../mixins/user
include ../../mixins/btn_group
include ../../mixins/btn

block title
	title Портфолио
block content
	//Секция Приветствие
	section.section.welcome
		.welcome__bg
			img(src=require("src/images/forest.jpg") alt="")
		.welcome__img_mask
		+autorization_btn('Авторизоваться', 'welcome_autorization_btn')
		//Фото разработчика
		.welcome__user
			+user('', 'Марина Сокуренко', 'Личный сайт разработчика')
			include ./../../parts/socials
			-
				var welcome_btn_group = [
				{
					title: 'Мои работы',
					class_name: 'btn-works',
					url: '#'
				},{
					title: 'Обо мне',
					class_name: 'btn-about',
					url: '#'
				},{
					title: 'Блог',
					class_name: 'btn-blog',
					url: '#'
				}
				];
			+btn_group('welcome_button-group', welcome_btn_group)
		.welcome__footer
			.welcome__copyright © Марина Сокуренко | 2018