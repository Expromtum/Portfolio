mixin btn(title,class_name)
	button.btn(class=class_name, type="button")=title

mixin submit(title)
	input.btn(class='btn_submit', type='submit',value=title)

mixin autorization_btn(title,class_name)
	button.autorization_btn(class=class_name, type="button")=title

mixin btn_group(userClass, btn_group)
	.btn-group(class=userClass)
		each btn_item in btn_group
			+btn(btn_item.title, btn_item.class_name)